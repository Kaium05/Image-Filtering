from google.colab import files
files.upload()  



import cv2
import numpy as np
import matplotlib.pyplot as plt


img = cv2.imread('     ', cv2.IMREAD_GRAYSCALE)

img = img.astype(float)

rows, cols = img.shape
median_img = np.zeros((rows, cols))

# Filter size
filter_size = 3
offset = filter_size // 2

# Manual 3Ã—3 median filter
for i in range(offset, rows - offset):
    for j in range(offset, cols - offset):
        
        # Extract 3x3 region
        neighborhood = img[i-offset:i+offset+1, j-offset:j+offset+1]
        
        # Flatten and sort
        vec = neighborhood.flatten()
        sorted_vec = np.sort(vec)
        
        # Median value
        median_img[i, j] = sorted_vec[len(sorted_vec)//2]

# Convert to uint8
median_img = median_img.astype(np.uint8)

# Display results
plt.figure(figsize=(10,5))

plt.subplot(1,2,1)
plt.imshow(img, cmap='gray')
plt.title('Original Image')
plt.axis('off')

plt.subplot(1,2,2)
plt.imshow(median_img, cmap='gray')
plt.title('Median Filtered Image')
plt.axis('off')

plt.show()
